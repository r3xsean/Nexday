<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Enhanced Typography Styles for Premium Feel -->
    
    <!-- Display Styles -->
    <style name="TextAppearance.Nexday.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">57sp</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    
    <style name="TextAppearance.Nexday.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    
    <!-- Headline Styles -->
    <style name="TextAppearance.Nexday.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="TextAppearance.Nexday.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="TextAppearance.Nexday.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <!-- Title Styles -->
    <style name="TextAppearance.Nexday.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
    <style name="TextAppearance.Nexday.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
    <style name="TextAppearance.Nexday.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
    <!-- Body Styles -->
    <style name="TextAppearance.Nexday.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="TextAppearance.Nexday.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="TextAppearance.Nexday.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <!-- Label Styles -->
    <style name="TextAppearance.Nexday.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.Nexday.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.Nexday.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Specialized App Styles -->
    <style name="TextAppearance.Nexday.TaskTitle" parent="TextAppearance.Nexday.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
    <style name="TextAppearance.Nexday.TaskDescription" parent="TextAppearance.Nexday.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:alpha">0.8</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="TextAppearance.Nexday.XPBadge" parent="TextAppearance.Nexday.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.Nexday.LevelDisplay" parent="TextAppearance.Nexday.TitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.Nexday.EmptyStateTitle" parent="TextAppearance.Nexday.HeadlineSmall">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="TextAppearance.Nexday.EmptyStateMessage" parent="TextAppearance.Nexday.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
</resources>