<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Level/XP Progress Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:padding="@dimen/header_padding_horizontal"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/elevation_level_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <TextView
            android:id="@+id/levelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:textAppearance="@style/TextAppearance.Nexday.LevelDisplay"
            android:layout_gravity="center_vertical" />
        
        <ProgressBar
            android:id="@+id/xpProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/progress_bar_margin_horizontal"
            android:layout_gravity="center_vertical"
            android:max="100"
            android:progress="0"
            android:progressTint="?attr/colorOnPrimary"
            android:progressBackgroundTint="?attr/colorOnPrimary"
            android:alpha="0.3" />
        
        <TextView
            android:id="@+id/xpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 10 XP"
            android:textAppearance="@style/TextAppearance.Nexday.LabelMedium"
            android:textColor="?attr/colorOnPrimary"
            android:layout_gravity="center_vertical" />
        
        <ImageButton
            android:id="@+id/sortButton"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_marginStart="@dimen/spacing_md"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_sort_24"
            android:contentDescription="Sort tasks"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/spacing_sm"
            android:tint="?attr/colorOnPrimary" />
        
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_marginStart="@dimen/spacing_sm"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings_24"
            android:contentDescription="@string/settings"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/spacing_sm"
            android:tint="?attr/colorOnPrimary" />
    </LinearLayout>

    <!-- ViewPager2 for Yesterday|Today|Tomorrow tabs -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation with tab badges -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_navigation" />

    <!-- Floating Action Button for adding tasks -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_24"
        android:contentDescription="Add Task"
        style="@style/Widget.Nexday.FloatingActionButton"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>